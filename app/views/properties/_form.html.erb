<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :content %>
  </div>

  <%= form.fields_for :nearest_stations do |nearest_station| %>
    <h3>
      <%= nearest_station.label :最寄駅%>
      <%= nearest_station.index + 1 %>
    </h3>
    <div class = "route">
      <%= nearest_station.label :路線名%>
      <%= nearest_station.text_field :route_name %>
    </div>
    <div class = "station">
      <%= nearest_station.label :駅名%>
      <%= nearest_station.text_field :station_name %>
    </div>
    <div class = "time_walk">
      <%= nearest_station.label :徒歩分数 %>
      <%= nearest_station.text_field :time_walk %>分
    </div>
  <% end %>
      <div class="actions">
        <%= form.submit %>
      </div>
<% end %>
